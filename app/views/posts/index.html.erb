<body id="post">
  
  <header>
  <%= render "shared/header" %>
  </header>

      <%= render "search_form" %>

  <div id = "wrap">
    <div class ="content"> 
      <h1>A video post site</h1> 
     </div>   
    <ul class='post-lists'>
      <% @posts.each do |post| %>
      <tr id="post_<%= post.id %>">
       <%= render 'post', post: post %>
      </tr> 
       <%end%>
      </ul>
  </div> 
  <% if user_signed_in? %>
    <div class='post-btn'>
    <%=link_to "   /posts/new" do%>
      <span class='post-btn-text'>POST</span>
      <%end%>
    </div>   
  <% end %>

  <footer>
  <%= render "shared/footer" %>
   </footer>
</body>
