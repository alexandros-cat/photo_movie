<body id="post">
  
  <header>
  <%= render "shared/header" %>
  </header>

  <form id="form1" action="#">
    <input id="sbox"  id="s" name="s" type="text" placeholder="キーワードを入力" />
    <input id="sbtn" type="submit" value="検索" />
  </form>

  <div id = "wrap">
    <div class ="content"> 
      <h1>A video post site</h1> 
     </div>   
    <ul class='post-lists'>
      <% @posts.each do |post| %>
         <li class='list'>
          <%= video_tag post.movie, controls: true, autobuffer: true, loop: true, class: "post-img" %>
         
        <%= link_to  post_path(post.id), method: :get do %> 
          <div class='post-info'>
            <h3 class='post-title'>
              title:<%=post.title %>
            </h3>
        <%end %>    
            <div class='post-category'>
              <span>category：<%= post.category.name%></span>
            </div>
          </div>
           </li>
       <%end%>
      </ul>
  </div> 
  <% if user_signed_in? %>
    <div class='post-btn'>
    <%=link_to "   /posts/new" do%>
      <span class='post-btn-text'>POST</span>
      <%end%>
    </div>   
  <% end %>

  <footer>
  <%= render "shared/footer" %>
   </footer>
</body>
